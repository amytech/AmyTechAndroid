<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_base_background">

    <com.amytech.torrenthome.core.view.widget.SearchView
        android:id="@+id/home_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/home_page_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_search_view"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:padding="10dp"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/home_page_list_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_search_view"
        android:gravity="center"
        android:text="@string/waitting"
        android:textColor="@color/color_base_body"
        android:textSize="18sp" />
</RelativeLayout>